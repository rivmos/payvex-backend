{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend for billing application built in node",
  "main": "dist/server.js",
  "type": "module",
  "prisma": {
    "seed": "pnpx tsx prisma/seed.ts"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node dist/server.js",
    "dev": "concurrently \"tsc -w\" \"nodemon dist/server.js\"",
    "build": "tsc",
    "db:migrate": "pnpx prisma migrate dev",
    "db:generate": "pnpx prisma generate",
    "db:seed": "pnpx prisma db seed",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "type:check": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rivmos/payvex-backend.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rivmos/payvex-backend/issues"
  },
  "homepage": "https://github.com/rivmos/payvex-backend#readme",
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.4.7",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/express": "^5.0.1",
    "concurrently": "^9.1.2",
    "eslint": "^9.22.0",
    "globals": "^16.0.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "prisma": "^6.5.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.27.0"
  }
}
