{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "target": "ES2024",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ES2024"]
  },
  "include": ["prisma", "src"]
}
